# Telegram Bot Configuration
# Get your token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Google Gemini API Configuration
# Get your API key from https://makersuite.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# Flask Web Server Configuration
# Generate a secure random string for your secret key
FLASK_SECRET_KEY=generate_a_secure_random_string_here

# Server Configuration (optional)
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Optional: Proxy Configuration
# HTTP_PROXY=http://user:pass@proxy:port
# HTTPS_PROXY=http://user:pass@proxy:port from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Google Gemini API Key (get from https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Flask secret key (generate a random string)
FLASK_SECRET_KEY=generate_a_random_secret_key_here
